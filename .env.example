# ============= APP CONFIGURATION =============
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5000

# ============= DATABASE =============
DATABASE_URL=postgresql://user:password@localhost:5432/maya_db?schema=public

# ============= REDIS =============
REDIS_URL=redis://localhost:6379

# ============= JWT =============
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============= WEB3AUTH CONFIGURATION =============
WEB3AUTH_CLIENT_ID=your-web3auth-client-id-from-dashboard
WEB3AUTH_VERIFIER=maya-auth-verifier
WEB3AUTH_NETWORK=mainnet
WEB3AUTH_CHAIN_ID=8453
WEB3AUTH_RPC_TARGET=https://base-mainnet.g.alchemy.com/v2/YOUR-KEY

# Web3Auth Providers Enabled
WEB3AUTH_ENABLE_GOOGLE=true
WEB3AUTH_ENABLE_FACEBOOK=true
WEB3AUTH_ENABLE_TWITTER=true
WEB3AUTH_ENABLE_APPLE=true
WEB3AUTH_ENABLE_EMAIL=true
WEB3AUTH_ENABLE_SMS=true

# ============= CIRCLE PAYMASTER CONFIGURATION =============
CIRCLE_API_KEY=your-circle-api-key
CIRCLE_ENTITY_SECRET=your-circle-entity-secret
CIRCLE_PAYMASTER_ADDRESS=0x0000000000000000000000000000000000000000
CIRCLE_USDC_CONTRACT=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
CIRCLE_API_BASE_URL=https://api.circle.com/v1

# Paymaster Settings
PAYMASTER_ENABLED=true
PAYMASTER_GAS_SPONSOR_NEW_USERS=true
PAYMASTER_MAX_GAS_SPONSORSHIP=0.50
PAYMASTER_SPONSOR_LIMIT_PER_USER=3

# ============= BASE BLOCKCHAIN CONFIGURATION =============
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR-API-KEY
BASE_RPC_URL_BACKUP=https://mainnet.base.org
BASE_CHAIN_ID=8453
BASE_NETWORK_NAME=base-mainnet

# Base Testnet (for development)
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR-KEY
BASE_SEPOLIA_CHAIN_ID=84532

# ============= ERC-4337 ACCOUNT ABSTRACTION =============
ACCOUNT_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
ENTRYPOINT_ADDRESS=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789
BUNDLER_RPC_URL=https://base-bundler.alchemy.com/v2/YOUR-KEY
BUNDLER_PROVIDER=alchemy

# Smart Account Settings
AUTO_DEPLOY_ACCOUNTS=true
COUNTERFACTUAL_ADDRESSES=true
MIN_BALANCE_FOR_DEPLOYMENT=0

# ============= GAS OPTIMIZATION =============
GAS_PRICE_STRATEGY=medium
MAX_GAS_PRICE_GWEI=50
GAS_PRICE_REFRESH_INTERVAL=30000
ENABLE_GAS_ESTIMATION=true

# Gas Limits
DEFAULT_GAS_LIMIT=200000
TRANSFER_GAS_LIMIT=100000
SMART_ACCOUNT_DEPLOY_GAS=500000

# ============= ENCRYPTION =============
ENCRYPTION_KEY=your-64-character-hex-string-for-aes-256-encryption-key

# ============= EMAIL (SENDGRID) =============
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=Maya <noreply@maya-pay.com>
SENDGRID_API_KEY=SG.xxx

# ============= PAYMENT INTEGRATIONS =============

# Plaid (Bank Integration - US)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Stripe (Card Processing)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Paystack (Nigeria)
PAYSTACK_SECRET_KEY=sk_test_xxx

# ============= KYC PROVIDER =============
KYC_PROVIDER=jumio
JUMIO_API_KEY=your-jumio-api-key
JUMIO_API_SECRET=your-jumio-api-secret

# ============= RATE LIMITING =============
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============= LOGGING =============
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ============= CORS =============
CORS_ORIGIN=http://localhost:3000,https://maya-pay.com

# ============= FEATURES =============
ENABLE_ESCROW=true
ENABLE_CARDS=true
ENABLE_WITHDRAWALS=true
ENABLE_KYC=true

# ============= LIMITS (DEFAULT) =============
DEFAULT_DAILY_LIMIT=1000
DEFAULT_MONTHLY_LIMIT=10000
DEFAULT_SINGLE_TX_LIMIT=5000

# ============= TRANSACTION FEES =============
BASE_FEE_PERCENTAGE=1.0
INSTANT_FEE_ADDITIONAL=1.0
WITHDRAWAL_FEE_PERCENTAGE=1.0
MIN_WITHDRAWAL_FEE=5.00

# ============= EMAIL PAYMENT FEATURES =============
DEFAULT_PAYMENT_EXPIRATION_DAYS=30
CLAIM_REMINDER_DAYS=7,3,1
EMAIL_TRACKING_ENABLED=true

# ============= ADMIN CONFIGURATION =============
JWT_ADMIN_SECRET=your-admin-secret-key-change-in-production
ADMIN_2FA_REQUIRED=true
ADMIN_SESSION_TIMEOUT=8h
